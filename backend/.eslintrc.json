{
    "env": {
      "es2022": true,
      "node": true
    },
    "extends": [
      "standard-with-typescript",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module",
      "project": "./backend/tsconfig.json"
    },
    "plugins": [
      "@typescript-eslint",
      "n",
      "promise",
      "import"
    ],
    "rules": {
      "no-console": 0,
      "no-async-promise-executor": 0,
      "prettier/prettier": 1
    },
    "overrides": [
      {
        "env": {
          "node": true
        },
        "files": [
          ".eslintrc.{js,json,cjs}"
        ],
        "parserOptions": {
          "sourceType": "script"
        }
      }
    ]
  }  