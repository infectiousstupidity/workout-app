{
    "compilerOptions": {
      "target": "es2022",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "lib": ["es2022"],
      "outDir": "dist",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "allowJs": true,
      "resolveJsonModule": true,
      "moduleDetection": "force",
      "isolatedModules": true,
      "strict": true,
      "noUncheckedIndexedAccess": true,
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.ts"
    ]
  }
  